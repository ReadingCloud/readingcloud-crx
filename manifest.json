{
  "manifest_version": 3,

  "name": "ReadingCloud",
  "description": "Save messages,tabs and links, visit anywhere.",
  "version": "1.5.6",
  "homepage_url": "http://readingcloud.abelcloud.net",

  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "ReadingCloud"
  },
  "options_page": "options.html",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
